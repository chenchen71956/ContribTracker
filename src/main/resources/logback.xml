<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>[%logger{0}/%level] %msg%n</pattern>
        </encoder>
    </appender>

    <!-- 设置ContribTracker日志级别 -->
    <logger name="ContribTracker" level="INFO" additivity="false">
        <appender-ref ref="STDOUT" />
    </logger>

    <!-- 减少其他日志输出 -->
    <logger name="com.example.contribtracker" level="INFO" additivity="false">
        <appender-ref ref="STDOUT" />
    </logger>

    <!-- 全局日志级别 -->
    <root level="WARN">
        <appender-ref ref="STDOUT" />
    </root>
</configuration> 